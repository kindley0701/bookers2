<% if @book.errors.any? %>
  <div class="error-message">
      <p class="error-amount"><%= @book.errors.count %> error prohibited this book from being saved:</p>
      <ul class="list">
            <% @book.errors.full_messages.each do |message| %>
              <li class="list-error"><%= message %></li>
            <% end %>
      </ul>
  </div>
<% end %> 
<div class="container">
  <div class="row">
    <%= render 'books/sidebar', book: @book, user: @user %>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill,100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>