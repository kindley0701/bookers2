

  <div class="col-lg-4">
    <div class="p-3">
       <h1>User info</h1>
       <table class="table">
        <thead>
          <tr>
            <th>
              <%= attachment_image_tag user, :profile_image, :fill,100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>

       <span>
         <% if user.id == current_user.id %>
           <%= link_to "Edit info", edit_user_path(user.id) %>
         <% else %>
           <%= link_to "Edit info", user_path(current_user.id) %>
         <% end %>
       </span>
    </div>
    <div class="p-3">
      <h1>New Book</h1>
      <%= form_with model: book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :opinion %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>