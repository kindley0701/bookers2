

  
    <div class="p-3">
       <h1>User info</h1>
       <table class="table">
        <thead>
          <tr>
            <th>
              <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill,100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>

       <span>
          <%= link_to edit_user_path(user.id) do%>
           <span class="btn btn-primary w-100">
             <i class="fas fa-user-cog"></i>
           </span>
         <% end %>
       </span>
    </div>
    <div class="p-3">
      <h1>New book</h1>
      <%= form_with model: book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <span class="btn btn-success"><%= f.submit 'Create Book' %></span>
      <% end %>
    </div>
