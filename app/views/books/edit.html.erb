<% if @book.errors.any? %>
  <div class="error-message">
      <p class="error-amount"><%= @book.errors.count %> error prohibited this book from being saved:</p>
      <ul class="list">
            <% @book.errors.full_messages.each do |message| %>
              <li class="list-error"><%= message %></li>
            <% end %>
      </ul>
  </div>
<% end %>
<div class="main">
  <div class="edit">
    <h1>Editing Book</h1>
    <div>
      <%= form_with model:@book, locla:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit "Update Book", method: :patch %>
      <% end %>
      <div class="SB">
        <span class="m-1"><%= link_to "Show", book_path(@book.id) %></span>
        <div class="m-1"> | </div>
        <span class="m-1"><%= link_to "Back", books_path %></span>
      </div>

    </div>
  </div>


</div>