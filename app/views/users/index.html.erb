<div class="row">
  <%= render 'books/sidebar', book: @book, user: @user %>
  <div class="col-lg-8">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill,100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>