<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/12ff2199f9.js" crossorigin="anonymous"></script>
    
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
        <h2><%= link_to "Bookers", root_path %></h2>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="p-2 list-item">
              <%= link_to user_path(current_user.id) do %>
                <i class="fas fa-home">Home</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to users_path do %>
                <i class="fas fa-users">Users</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to books_path do %>
                <i class="fas fa-book-open">Books</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt">Log out</i>
              <% end %>
            </li>
          <% else %>
            <li class="p-2 list-item">
              <%= link_to root_path do %>
                <i class="fas fa-home">Home</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to '/home/about' do %>
                <i class="fas fa-link">About</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus">Sign up</i>
              <% end %>
            </li>
            <li class="p-2 list-item">
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt">Log in</i>
              <% end %>
            </li>
          <% end %>    
        </ul>
      </nav>
    </header>

    
      <%= yield %>
    
      
    
    
    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>
